<div class="container">
  <div class="row">
    <h2>新規寺院登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <table border="0" width="800" height="300">
      <tr>
        <th width="25%">寺院名</th>
        <td>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
            <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
        </td>
      </tr>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td>
            <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </td>
      </tr>
      <tr>
        <th>住所</th>
        <td>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
            <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
        </td>
      </tr>
      <tr>
        <th>電話番号(ハイフンなし)</th>
        <td>
            <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
        </td>
      </tr>
      <tr>
        <th>パスワード(6文字以上)</th>
        <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <th >パスワード確認用</th>
        <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
    </table>

    <div style="text-align: center;">
      <div class="actions">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    </div>
    <% end %>

    <h4>すでにご登録済みの寺院様</h4>
    <h5>　　<%= link_to "こちら", new_admin_session_path  %>からログインしてください</h5>
  </div>
</div>

