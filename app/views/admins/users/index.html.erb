<div class="customer container">
  <div class="row">
    <h2>会員一覧画面</h2>
    <table class="table table-users">
      <thead>
	    <tr bgcolor="#EEEEEE">
	      <th>氏名</th>
	      <th>電話番号</th>
	      <th>メールアドレス</th>
	      <th>ステータス</th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @users. each do |user| %>
	  	<tr>
		    <td>
			  <%= link_to admins_user_path(user.id) do %>
		        <%= user.fam_name + user.first_name %>
		      <% end %>
		    </td>
		    <td><%= user.tel %></td>
		    <td><%= user.email %></td>
		    <% if user.is_active? == true %>
		      <td>檀家</td>
		    <% else %>
		      <td>離檀</td>
		    <% end %>
		</tr>
		<% end %>
	  </tbody>
	</table>
  </div>
</div>