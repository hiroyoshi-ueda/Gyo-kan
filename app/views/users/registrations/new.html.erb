<div class="container">
  <div class="row">
    <h2>新規檀家登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <table border="0" width="800" height="300">
      <tr>
        <th>名前</th>
        <td>
          <div class="form-group">
            (姓)
            <%= f.text_field :fam_name, autofocus: true, autocomplete: "fam_name" %>
            (名)
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td>
          <div class="form-group">
            (セイ)
            <%= f.text_field :fam_name_kana, autofocus: true, autocomplete: "fam_name_kana" %>
            (メイ)
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>
        </td>
      </tr>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td>
            <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %>
        </td>
      </tr>
      <tr>
        <th>現住所</th>
        <td>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </td>
      </tr>
      <tr>
        <th>本籍</th>
        <td>
            <%= f.text_field :domicle, autofocus: true, autocomplete: "domicle" %>
        </td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td>
            <%= f.text_field :email, autofocus: true, autocomplete: "email" %>
        </td>
      </tr>
      <tr>
        <th>電話番号(ハイフンなし)</th>
        <td>
            <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
        </td>
      </tr>
      <tr>
        <th>パスワード(6文字以上)</th>
        <td>
            <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
      </tr>
      <tr>
        <th >パスワード確認用</th>
        <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </td>
      </tr>
    </table>
  </div>
</div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
