<div class="container user edit">
<h2>登録情報編集</h2>
  <%= form_for(@user,url: user_path(@user), method: :patch) do |f| %>
    <div class="row">
    <div class="col-xs-8">
      <table class='table table-user-edit'>
	  	<table border="0" width="600" >
	  	  <tr>
	  	    <th width="35%">氏名</th>
	  	    <td width="65%">
	  	      <div class="form-group">
		        (姓)　
		        <%= f.text_field :fam_name, autofocus: true, autocomplete: "fam_name" %>
		        (名)　
		        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
	          </div>
	        </td>
	      </tr>
	      <tr>
	  	    <th>フリガナ</th>
	  	    <td>
	  	      <div class="form-group">
		        (セイ)
		        <%= f.text_field :fam_name_kana, autofocus: true, autocomplete: "fam_name_kana" %>
		        (カナ)
		        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
	          </div>
	        </td>
	      </tr>
	      <tr>
		    <th>郵便番号(ハイフンなし)</th>
		  	<td><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code" %></td>
		  </tr>
		  <tr>
		    <th>住所</th>
		  	<td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
		  </tr>
		  <tr>
		    <th>本籍</th>
		  	<td><%= f.text_field :domicle, autofocus: true, autocomplete: "domicle" %></td>
		  </tr>
		  <tr>
		    <th>メールアドレス</th>
		  	<td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
		  </tr>
		  <tr>
		    <th>電話番号</th>
		  	<td><%= f.text_field :tel, autofocus: true, autocomplete: "tel" %></td>
		  </tr>
	    </table>

	    <table>
          <tr>
            <th>
              <div class="btn-s2">
                <%= f.submit "編集内容を保存する", class: "btn btn-success " %>
              </div>
            </th>
          </tr>
        </table>
	  </table>
	</div>
    </div>
  <% end %>
</div>
