<div class="admin show container">
  <h2>寺院登録情報</h2>
  <div class="row">
    <div class='col-xs-3'>
      <%= attachment_image_tag(@admin, :image, :fill, 180, 180, fallback: "no_image.png") %>
    </div>
    <div class='col-xs-9'>
      <table class='table table-admin'>
        <table border="1" width="600" >
        <thead>
          <tr height="50">
            <th width="25%">寺院名</th>
              <td width="75%"><%= @admin.name %></td>
          </tr>
          <tr height="50">
            <th>フリガナ</th>
              <td><%= @admin.name_kana %></td>
          </tr>
          <tr height="50">
            <th>郵便番号</th>
              <td><%= @admin.post_code %></td>
          </tr>
          <tr height="50">
            <th>住所</th>
              <td><%= @admin.address %></td>
          </tr >
          <tr height="50">
            <th>メールアドレス</th>
              <td><%= @admin.email %></td>
          </tr>
          <tr height="50">
            <th>電話番号</th>
              <td><%= @admin.tel %></td>
          </tr>
        </thead>
        </table>
      </table>
    </div>
  </div>
</div>
